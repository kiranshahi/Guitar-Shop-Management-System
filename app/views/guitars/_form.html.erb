    </div>

    <div class="field">
      <%= f.label :purposed_selling_price %><br>
      <%= f.number_field :purposed_selling_price, :disabled => true %>
    </div>

    <div class="field">
      <%= f.label :rack_no %><br>
      <%= f.number_field :rack_no, {required: true} %>
    </div>

     <div class="field">
      <%= f.label :quantity %><br>
      <%= f.number_field :quantity, :disabled => true %>
    </div>

    <div class="field">
      <%= f.label :image %><br>
      <%= f.file_field :image, :disabled => true %>
    </div>
    
    <div class="field">

     <%= f.label :damaged_status %>
      <br>
      <%= f.select(:damaged_status) do %>
          <% [['Ok', 'Ok'], ['Damaged', 'Damaged']].each do |c| -%>
            <%= content_tag(:option, c.first, value: c.last) %>
          <% end %>
      <% end %>
    </div>
    <br />
    <div class="action">
      <%= f.submit "Save Guitar Details", :class => 'btn btn-primary active' %>
    </div>

  <% end -%>

<% end %>